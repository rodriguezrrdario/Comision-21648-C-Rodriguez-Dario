<body>  
  

      <table class="table table-striped">
        <thead>
          <tr>
            <a type="button" class="btn btn-dark" href="/listado">
                Listado de posteos
              </a>
              <a type="button" class="btn btn-success" href="/agregar">
                Agregar posteo
              </a>
            <!-- <th scope="col">Id</th> -->
            <th scope="col">TÃ­tulo</th>
            <th scope="col">Contenido</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>          
            <% posteos.forEach((item) => { %>
            <tr>
              <!-- <th scope="row"><%= item.id %></th> -->
              <td><%= item.titulo %></td>
              <td><%= item.contenido %></td>            
              <td>
                  <button type="button" class="btn btn-warning">
                    Editar</button>
              </td>
              <td>
              <a type="button" class="btn btn-danger" href="/eliminar/<%= item.id %>">
                Eliminar
              </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        
      </table> 
    

